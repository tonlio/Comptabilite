<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itsulution.www.comptabilite.FirstActivity"
    android:id="@+id/rlwelcom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcom"
        android:id="@+id/tvserver"
        android:layout_marginTop="26dp"
        android:textColor="#00f"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bouton_acceuiul"
        android:id="@+id/serveur_suivant"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp"
        android:layout_below="@+id/serveur_ip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serveur_ip"
        android:layout_alignTop="@+id/tvserver"
        android:layout_toRightOf="@+id/tvserver"
        android:layout_alignRight="@+id/serveur_suivant"
        android:layout_alignEnd="@+id/serveur_suivant" />

</RelativeLayout>
